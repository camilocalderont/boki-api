{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug NestJS",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start:dev"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "sourceMaps": true,
        "restart": true,
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "NODE_ENV": "development",
          "NODE_OPTIONS": "--inspect"
        },
        "outputCapture": "std",
        "cwd": "${workspaceFolder}",
        "autoAttachChildProcesses": true
      }
    ]
  }