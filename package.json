{
    "name": "bokibot-monorepo",
    "private": true,
    "workspaces": ["apps/*", "libs/*"],
    "scripts": {
      "dev": "concurrently \"npm:dev-api\" \"npm:dev-bot\"",
      "dev-api": "npm run start:dev -w @bokibot/api",
      "dev-bot": "npm run start:dev -w @bokibot/bot",
      "build": "npm run build -w @bokibot/api && npm run build -w @bokibot/bot",
      "lint": "eslint \"{apps,libs}/**/*.ts\""
    },
    "devDependencies": {
      "concurrently": "^8.0.0",
      "typescript": "~5.5.0",
      "eslint": "^8.52.0",
      "@typescript-eslint/parser": "^7.4.0",
      "@typescript-eslint/eslint-plugin": "^7.2.0"
    }
  }
